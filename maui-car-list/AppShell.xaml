<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="maui_car_list.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:maui_car_list"
    xmlns:testviews="clr-namespace:maui_car_list.Views.TestPages"
    Shell.FlyoutBehavior="Flyout"
    Title="maui_car_list">

    <TabBar>
        <Tab Title="Main Page" Icon="dotnet_bot.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Icon="dotnet_bot.png"/>
        </Tab>
        <Tab Title="TestPage" Icon="dotnet_bot.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate testviews:TestPage}"/>
        </Tab>
        <Tab Title="TestPage2" Icon="dotnet_bot.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate testviews:TestPage2}"
                Icon="dotnet_bot.png"/>
        </Tab>
        <Tab Title="LayoutExample" Icon="dotnet_bot.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate testviews:LayoutExample}"
                Icon="dotnet_bot.png"/>
        </Tab>
    </TabBar>


    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Icon="dotnet_bot.png"/>
    <ShellContent
        Title="Test Page"
        ContentTemplate="{DataTemplate testviews:TestPage}"/>
    <ShellContent
        Title="Test Page 2"
        ContentTemplate="{DataTemplate testviews:TestPage2}"/>
    <ShellContent
        Title="LayoutExample"
        ContentTemplate="{DataTemplate testviews:LayoutExample}" />

</Shell>
